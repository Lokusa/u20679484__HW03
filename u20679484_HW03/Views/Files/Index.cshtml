
@{
    ViewBag.Title = "FileIndex";
}

<h1>Documents of any file type</h1>
<h3>.........."Files/" folder</h3>
<br />
<br />
<div class="body-content" style="background-color:lightcyan">
    <br />
    <br />

    <table class="table  card">
        <thead>
            <tr>
                <th>
                    File Name
                </th>
                <th>
                    Download Option
                </th>
                <th>
                    Delete Option
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FileName</td>
                    <td>
                        <button class="btn btn-success">@Html.ActionLink("Download", "Download", new { FileName = item.FileName })</button>
                    </td>
                    <td>
                        <button class="btn btn-success">@Html.ActionLink("Delete", "Delete", new { FileName = item.FileName })</button>

                    </td>
                </tr>
            }
            }

        </tbody>

    </table>
    <br />
    
</div>